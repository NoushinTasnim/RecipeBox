<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="100dp" />
            <stroke android:width="2dip" android:color="@color/light_shade" />
            <gradient android:angle="-90" android:color="@color/light_accent"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="100dp" />
            <stroke android:width="2dip" android:color="@color/light_accent" />
            <solid android:color="@color/light_shade"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="100dp" />
            <stroke android:width="2dip" android:color="@color/main_color" />
            <gradient android:angle="-90" android:startColor="#00000000" android:endColor="#00000000" />
        </shape>
    </item>
</selector>